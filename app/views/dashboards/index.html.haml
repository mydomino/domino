#dashboards.container
  .clearfix.bg-white.mt3.mb3.p2.max-width-4.mx-auto
    .col.col-12
      %h1.inline-block.m0 Dashboards

      .inline-block.right.mt1
        =link_to 'All', {filter: 'all'}, class: "left btn caps rounded-left #{(@filter == 'all') ? 'bg-blue white' : 'bg-gray black'}"
        =link_to 'Mine', {filter: "mine"}, class: "left btn caps rounded-right #{(@filter == 'mine') ? 'bg-blue white' : 'bg-gray black' }"
        /.inline-block.border.p2.mr3.right
      .p2.mr3.right{style: 'width:400px;'} 
        =form_tag dashboards_path, method: 'GET' do
          .inline-block
            =text_field_tag 'search', @search_term, style: 'height: 1.6em;'
          =hidden_field_tag 'filter', @filter
          =hidden_field_tag 'view', 'table'
          =submit_tag 'Search', class: 'btn white pull-right bg-blue border', style: "margin-right: 64px; width: 128px;height:32px;border-radius:16px;"

    .col.col-12
      .clearfix
        %table.table-light#tbl-dashboards
          %tr
            %th 
              =sortable "created_at", "Created", filter: @filter
            %th 
              =sortable "lead_name", "Name", filter: @filter
            %th 
              =sortable "lead_email", "Email", filter: @filter
            %th Products Done
            %th Actions Done
            %th Delete
          -@dashboards.each do |dashboard|
            %tr.dashboard-record
              %td #{dashboard.created_at.strftime("%Y-%m-%d")}
              %td
                =link_to dashboard.lead_name, dashboard_path(dashboard), target: 'blank', class: 'text-decoration-none'
              %td #{dashboard.lead_email}
              %td #{dashboard.recommendations.products.done.count}/#{dashboard.recommendations.products.count} products
              %td #{dashboard.recommendations.tasks.done.count}/#{dashboard.recommendations.tasks.count} actions
              %td
                =link_to "Delete", dashboard_path(dashboard), method: 'DELETE', data: {confirm: 'Are you sure?'} 
  .clearfix.max-width-4.mx-auto
    .col.col-12
      = paginate @dashboards
