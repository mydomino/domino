-content_for :navbar_class do 
  bg-light-gray

-if concierge_signed_in?
  =render 'concierge_narrow_navbar'
  :css
    body
    {
      padding-top: 60px;
    }

  .modal.fade#new-recommendation
    .container
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
          .modal-body
            .row
              .col-xs-12
                =render 'recommendations/bulk_add_form'
.bg-light-gray 
  .container
    .clearfix.center
      .sm-col.sm-col-12
        %h1.charcoal
          Hi, 
          =@dashboard.lead_name.titleize
    .clearfix.center
      .sm-col.sm-col-12
        %h3.charcoal
          Our team of nerds loves to test and research green technologies.
        %p.charcoal
          These
          %strong.blue
            hand-picked product recommendations
          will help you save energy and money.

    .bg-white
      .clearfix
        .sm-col.sm-col-12
          %h3.center Your Recommendations    
      .clearfix
        .sm-col-right
          .inline-block.clearfix.mr2
            =link_to 'All', {filter: nil}, class: "btn left rounded-left uppercase #{@filter.nil? ? 'bg-navy white' : 'btn-outline'}"
            =link_to 'Products', {filter: "products"}, class: "uppercase left btn border-left not-rounded #{(@filter == 'products') ? 'bg-navy white' : 'btn-outline' }"
            =link_to 'Actions', {filter: "actions"}, class: "uppercase left btn border-left rounded-right #{(@filter == 'actions') ? 'bg-navy white' : 'btn-outline' }"
      /.progress
      /  .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
      /    20% Complete
      -@recommendations.each_slice(3) do |recommendations|
        .clearfix
          -recommendations.each do |recommendation|
            =render recommendation
