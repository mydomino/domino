-if concierge_signed_in?
  =render 'concierge_narrow_navbar'
  :css
    body
    {
      padding-top: 60px;
    }

  .modal.fade#new-recommendation
    .container
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
          .modal-body
            .row
              .col-xs-12
                =render 'recommendations/bulk_add_form'
.container
  .row.text-center
    .col-xs-12
      %h1.text-gray
        Hi, 
        =@dashboard.lead_name.titleize
  .row.text-center{style: "margin-bottom: 60px;"}
    .col-xs-12
      %h3.text-gray
        Our team of nerds loves to test and research green technologies.
      %p.text-gray
        These
        %strong.blue-text
          hand-picked product recommendations
        will help you save energy and money.

  .store.panel
    .row
      .col-xs-12
        %h3.text-center Your Recommendations    
    .row
      .col-xs-12
        .btn-group.pull-right.filters{"aria-label" => "Filters", :role => "group"}
          =link_to 'All', {filter: nil}, class: "btn uppercase #{@filter.nil? ? 'blue' : 'btn-transparent'}"
          =link_to 'Products', {filter: "products"}, class: "btn uppercase #{(@filter == 'products') ? 'blue' : 'btn-transparent' }"
          =link_to 'Actions', {filter: "actions"}, class: "btn uppercase #{(@filter == 'actions') ? 'blue' : 'btn-transparent' }"
    .progress
      .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
        20% Complete
    -@recommendations.each_slice(3) do |recommendations|
      .row
        -recommendations.each do |recommendation|
          =render recommendation