%nav#navbar.col-12{class: yield(:navbar_class), style: "z-index:10000;"}
  .max-width-4.mx-auto
    .clearfix
      .col.col-6.p2
        = link_to embedded_svg('mydomino_logo.svg'), root_path, id: "navbar-brand", class: "white"
      .md-hide.lg-hide.px2.right
        .fa.fa-bars.pointer{style: "font-size: 2rem;padding-top: 1.75rem;"}
      .xs-hide.sm-hide.py3.px3.my1.sm-hide
        .right
          -if user_signed_in?
            -if current_user.role == 'concierge'
              =link_to 'CONCIERGE TOOLS', dashboards_path, class: 'white border p1 rounded text-decoration-none'
            -else
              =link_to 'DASHBOARD', user_dashboard_path, class: 'white border p1 rounded text-decoration-none'
            =link_to 'LOG OUT', destroy_user_session_path, method: :delete, class: 'white border p1 rounded text-decoration-none'
          -else
            =link_to "LOG IN", new_user_session_path, class: 'white border p1 rounded text-decoration-none', id: "link-login"
        .right-align.right.mx2
          %i.fa.fa-phone.fa-2
          800-979-2215

      .nav-bg.easeInOut.absolute.col-12.top-0.left-0.right-0.white.flex.flex-center
        .content.flex-auto
          %h1.inline-block
            .fa.fa-times.fixed.top-0.right-0.p3.pointer
          %ul.py4.center.list-reset{ style: "font-size: 3rem;" }
            %li
              = link_to 'About', about_path, class: "white py1 inline-block"
            %li
              = link_to 'Press', 'http://mydomino.strikingly.com', target: '_blank', class: "white py1 inline-block"
            %li
              = link_to 'Blog', 'http://www.mydomino.com/blog/', target: '_blank', class: "white py1 inline-block"

:javascript
  $(document).ready(function(){

    $('nav .fa-bars').click(function(){
      $('nav').addClass('open');
    });

    $('nav .nav-bg .fa-times').click(function(){
      $('nav').removeClass('open');
    });
   
    $(window).scroll(function() {
      var scrollTop = $(this).scrollTop();
      if ( scrollTop > 70) { 
        $('#navbar').css({'background-color':'#00CCFF', 'box-shadow': '0 1px 1px 1px #f1f1f1'});
      }else{
        $('#navbar').css({'background-color':'transparent', 'box-shadow' : 'none'});
      }
    });
  });
