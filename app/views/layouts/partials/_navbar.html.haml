%nav#navbar.col-12{class: yield(:navbar_class), style: "z-index:10000;"}
  .max-width-4.mx-auto
    .clearfix
      .col.col-6.p2
        -if controller_name == 'pages' && action_name == 'index'
          = link_to embedded_svg('mydomino_logo.svg'), root_path, id: "navbar-brand"
        -else
          = link_to embedded_svg('mydomino_logo_universal.svg'), root_path, id: "navbar-brand"

      .md-hide.lg-hide.px2.right
        .fa.fa-bars.pointer.navbar-element{style: "font-size: 2rem;padding-top: 1.75rem;"}
      .xs-hide.sm-hide.py3.px3.my1.sm-hide
        .right
          -if user_signed_in?
            -if current_user.role == 'concierge'
              =link_to 'CONCIERGE TOOLS', dashboards_path, class: 'white border p1 rounded text-decoration-none navbar-element'
            -else
              =link_to 'DASHBOARD', user_dashboard_path, class: 'white border p1 rounded text-decoration-none navbar-element'
            =link_to 'LOG OUT', destroy_user_session_path, method: :delete, class: "#{current_page?(root_path) ? 'white' : 'charcoal'} border p1 rounded text-decoration-none navbar-element"
          -else
            =link_to "LOG IN", new_user_session_path, class: "#{current_page?(root_path) ? 'white' : 'charcoal'} border p1 rounded text-decoration-none navbar-element", id: "link-login"
        .right-align.right.mx2.navbar-element
          %i.fa.fa-phone.fa-2
          800-979-2215
      .nav-bg.easeInOut.absolute.col-12.top-0.left-0.right-0.white.flex.flex-center
        .content.flex-auto
          %h1.inline-block
            .fa.fa-times.fixed.top-0.right-0.p3.pointer
          %ul.py4.center.list-reset{ style: "font-size: 3rem;" }
            %li
              = link_to 'Login', new_user_session_path , class: "white py1 inline-block"
            %li
              = link_to 'Call Us', 'tel:+8009792215', target: '_blank', class: "white py1 inline-block"
            %li
              = link_to 'Blog','http://mydomino.com/blog/', target: '_blank', class: "white py1 inline-block"

:javascript
  $(document).ready(function(){
    $('nav .fa-bars').click(function(){
      $('nav').addClass('open');
    });

    $('nav .nav-bg .fa-times').click(function(){
      $('nav').removeClass('open');
    });
  });
