-content_for :navbar_class do
  bg-transparent fixed midgray sm-col-12
#signup.devise-form.py4
  .max-width-3.mx-auto.mt4
    .bg-lightgray.rounded.pt3.mt4.max-width-2.mx-auto
      .bg-blue.block.mx-auto{style: 'width: 100px; height: 100px; border-radius: 100px;'}
        = image_tag "penguin-white.svg", width: '100px', style: 'margin-top: 10px;'
      %h1.center.domino-gray Change Your Password
      =simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        - flash.each do |name, msg|
          = content_tag :div, msg.html_safe, :id => "flash_#{name}", style: 'text-align: center', class: 'domino-gray' if msg.is_a?(String)
        .form-inputs.max-width-1.mx-auto
          %label.domino-gray New Password
          = f.input_field :password, required: true,class: 'mb2 mt1', style: 'height: 40px;', autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
          %label.domino-gray Confirm Your New Password
          = f.input_field :password_confirmation, required: true,class: 'mb2 mt1', style: 'height: 40px;'
          .py3
            = f.button :submit, "Change my password", class: "bg-blue white", style: 'border-radius:40px; border:none;height:50px; color:white;'
:javascript
  $(document).ready(function(){
    navbarScroll('#666', '#00ccff');
  });