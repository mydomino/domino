#interests.pt4{style: 'border-bottom: 2px solid lightgray;'}
  .max-width-3.mx-auto.mt4
    -flash.each do |key, value|
      .flash.center.blue
        =value
    .clearfix.mb4
      .col.col-12.center
        .max-width-1.mx-auto.h2.line-height-2
          I am interested in learning more about the following...
      .mt1.col.col-12.h4.center.italic (Choose as many as you like)
    .clearfix.mx-auto
      =simple_form_for @profile, remote: true do |form|
        .max-width-2.mx-auto
          .flex.justify-center
            .inline-block.ml1
              -5.times do |index|
                =render "profiles/interest_checkbox", :index => index
            .inline-block.align-top.ml2
              -4.times do |index|
                =render "profiles/interest_checkbox", :index => index + 5
          .display-none
            =form.association :offerings, label: false, :as => :check_boxes, collection: Offering.all
          .mt2.mb3.px2
            =form.submit "BACK", class: "bg-white black inline-block", style: "border: 2px solid black; border-radius: 20px;width: 120px; height: 40px;"
            =form.submit "NEXT", class: "btn-submit-active white right border-none inline-block", style: "border-radius: 20px;width: 120px; height: 40px;"

:javascript
  $(document).ready(function(){
    logoColors.startColors.text = '#666'
    logoColors.startColors.penguin = '#00ccff'
    $('.navbar-element').css('color', '#666666');
    navbarScroll('#666666', '#666');

    $('.btn-interest').on('click', function(){
      if($(this).hasClass('active')){
        $(this).css('background-color', 'white');
        $(this).css('border-color', 'black');
        $('i', this).css('display', 'none');
        $(this).removeClass('active');
      }else{
        $(this).css('background-color', '#00CCFF');
        $(this).css('border-color', '#00CCFF');
        $('i', this).css('display', 'inline');
        $(this).addClass('active');
      }
      var target = '#' + $(this).data('target');
      $(target).prop('checked', function( i, val ) {
        return !val;
      });
    });

    //submit buttons may not be pushed multiple times
    $("form").submit(function() {
      $(this).submit(function() {
        return false;
      });
      return true;
    });

    //mobile
    $(window).scrollTop(0)

  });
