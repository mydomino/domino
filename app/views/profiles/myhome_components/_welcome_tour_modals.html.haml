    .right.mt2.flex.items-center
      %a.wt-back.text-decoration-none.gray-6.pointer.mr3{data: {step: 3}}
        .flex.items-center
          %span.inline-block.mr1
            =inline_svg "icons/i-arrow-left.svg", class: "icon-s fill-gray-4 block"
          .h5.gray-4 Back

      .wt-finish.btn.btn-sm.btn-primary.btn-primary--hover{data: {step: 3}}
        .flex.items-center
