/* Logic goes here to display to the user whether the advocate code they entered was valid or note*/

<% if @partner_code %>
  // alert('Partner Code Valid!' );
  $('#fee').html('0');
  $("#profile_partner_code, #btn-apply").css('border', '2px solid #858585');
  $('#btn-apply').html("<i class='fa fa-check fa-3 white'></i>").css('background-color', '#858585').prop("disabled",true);
  $("#profile_partner_code").css('color', '#858585').prop("readonly", true);
  if($('#msg-code-apply').length != 0){
    $('#msg-code-apply').html('The code is valid!').css('color', '#00CCFF');
  }
  else{
    $('#btn-apply').after("<p class='m0 blue' id='msg-code-apply'>The code is valid!</p>");
  }
<% else %>
  if( $('#msg-code-apply').length != 0 ){
    $('#msg-code-apply').html("This code isn't valid, please try again.");
  }
  else{
    $('#btn-apply').after("<p class='m0 red' id='msg-code-apply'>This code isn't valid, please try again.</p>");
  }
<% end %>