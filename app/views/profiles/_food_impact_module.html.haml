:scss
  .fat-module {
    li {
      width: 2em;
      height: 2em;
      text-align: center;
      line-height: 2em;
      border-radius: 1em;
      background: dodgerblue;
      margin: 1rem 1rem;
      display: inline-block;
      color: white;
      position: relative;
      border: 2px solid lightgrey;
    }

    li.chained::before{
      content: '';
      position: absolute;
      top: .9em;
      left: -4em;
      width: 4em;
      height: .2em;
      background: #2ECC71;
      z-index: 0;
    }

    li::after {
      position: absolute;
      top: 2em;
      left: 0;
      right: 0;
      text-align: center;
      color: black;
      margin-bottom: 1em;
    }

    li.monday::after { content: 'M'; }
    li.tuesday::after { content: 'Tu';} 
    li.wednesday::after { content: 'W';}
    li.thursday::after { content: 'Th';} 
    li.friday::after { content: 'F';}
    li.saturday::after { content: 'Sa';}
    li.sunday::after { content: 'Su';}

    li.complete {
      background: #2ECC71;
      border-color: #2ECC71;
    }

    li.incomplete {
      background: white;
      border: 2px solid #00ccff;
    }

    li.complete .fa-check {
      position: absolute;
      top: 8px;
      left: 0;
      right: 0;
    }

    li.incomplete .fa-question {
      color: #00ccff;
      position: absolute;
      top: 8px;
      left: 0;
      right: 0;
    }

    li.future {
      border-color: #eaeaea;
      background: white;
    }
    li.future::after {
      color: #eaeaea
    }

    li:first-child::before {
      display: none;
    }

    .h2 {
        position: relative;
        font-size: 30px;
        z-index: 1;
        overflow: hidden;
        text-align: center;
    }
    @media (max-width: 400px) {
      .h2:before, .h2:after {
        display: none;
      }
    }
    .h2:before, .h2:after {
        position: absolute;
        top: 51%;
        overflow: hidden;
        width: 50%;
        height: 1px;
        content: '\a0';
        background-color: #eaeaea;
    }
    .h2:before {
        margin-left: -50%;
        text-align: right;
    }
  }
.fat-module.mt4.max-width-4.mx-auto
  .clearfix.mx2.lg-mx1
    .col.col-12.mb2.center
      .p3.bg-white.rounded.center
        .mb3
          .flex.items-center.justify-center
            =image_tag "icons/i-apple.png", :class => "mr1"
            .h1.black.bold.inline.line-height-1
              Food Impact
          %p.col-12.sm-col-8.gray-60.mt1.mx-auto Compete with your teammates! Enter the categories of food you eat everyday to see the carbon footprint of your diet. Earn points by staying below the national average.
          = link_to 'food' do
            %button.btn.btn-sm.btn-primary.btn-primary--hover
              .bold Update today
          .h2.mt2.mb1.gray-80
            = @week_of
          %ul.list-reset
            -z_index = 7
            -prev_complete = false
            -@timeline_params.each do |p|
              %li.mb3{class: "#{p[:day]} #{p[:status]} #{'chained' if (prev_complete && p[:status]=='complete')} #{'pointer' if p[:status] != 'future'}", style: "z-index: #{z_index}", data: {link: p[:link]}}
                -if p[:status]=="complete"
                  %i.fa.fa-check
                  -prev_complete = true
                -elsif p[:status]=="incomplete"
                  %i.fa.fa-question
                  -prev_complete = false
              -z_index -= 1