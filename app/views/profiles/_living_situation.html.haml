
%h1 Let's learn about your home
-flash.each do |key, value|
  .flash
    =value
=simple_form_for @profile, remote: true do |form|
  =form.input :address_line_1
  =form.input :address_line_2
  =form.input :city
  =form.input :state
  =form.input :zip_code
  =form.input :phone
  =form.input :housing, :as => :hidden, :input_html => { :value => "" }
  =form.submit "back"
  =form.submit "Next"

%label Housing
%button#btn-rent RENT
%button#btn-own OWN

#slider

:javascript
  $( "#slider" ).slider({
    animate: "fast",
    max: 500
  });