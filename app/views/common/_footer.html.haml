= cache('footer') do
  .footer
    .container
      .row.links
        .col-xs-4.col-md-2
          %p.link= link_to 'ABOUT', about_path
        .col-xs-4.col-md-2
          %p.link= link_to 'BLOG', "http://www.beyondfossilfuels.org",
          target: '_blank'
        .col-xs-4.col-md-2
          %p.link= link_to 'PRESS', 'http://mydomino.strikingly.com', target: '_blank'
        .col-xs-4.col-md-2
          %p.link= link_to 'CAREERS', "https://hellohired.com/domino"
        .col-xs-4.col-md-2
          %p.link= link_to 'TERMS', terms_path
        .col-xs-4.col-md-2
          %p.link= link_to 'PRIVACY', privacy_path
      .row.social
        .col-xs-4
          = link_to "http://www.facebook.com/ourdominoeffect", target: '_blank' do
            = image_tag 'facebook.png'
        .col-xs-4
          = link_to "http://twitter.com/OurDominoEffect", target: '_blank' do
            = image_tag 'twitter.png'
        .col-xs-4
          = link_to "http://www.beyondfossilfuels.org", target: '_blank' do
            = image_tag 'rss.png'
        %p= snippet 'footer-contact'
      .col-xs-4
        %p Key Advisor
        = link_to "http://www.rmi.org" do
          = image_tag "rmi-logo.png"
      .col-xs-4.seia
        = link_to "http://www.seia.org" do
          = image_tag "seia.png"
      .col-xs-4
        = link_to "http://www.bcorporation.net" do
          = image_tag "Certified B Corp-pending.png"
    .row
      .col-xs-12.text-center
        =link_to(image_tag('//heapanalytics.com/img/badge.png', style: "width:108px;height:41px", alt: "Heap | Mobile and Web Analytics" ), 'https://heapanalytics.com/?utm_source=badge')
    .copyright= snippet 'footer-copyright'
