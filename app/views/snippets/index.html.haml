.row
  .col-md-2
    = link_to root_url do
      = image_tag "Domino Logo.png"
  .col-md-10
    %h3 Domino Site Copy
.row
  .import-export
    = form_tag import_snippets_path, multipart: true do
      = file_field_tag :file
      = submit_tag "Import"
    = link_to "export", export_snippets_path
    |
    = link_to "create new", new_snippet_path, remote: true
    = nested_snippets @snippets.arrange(order: :name)
  .form-container
    = render "form"
