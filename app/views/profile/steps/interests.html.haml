-if flash[:notice]
  =render 'profiles/flash_notice'

#interests{class: "#{@browser.device.mobile? ? 'mobile-form' : 'mb4'}"}
  .spacer
  = render :partial => 'profile/steps/steps_progress', :locals => {:step => 1} 

  .max-width-3.mx-auto.p2.rounded{class: "#{@browser.device.mobile? ? 'bg-white' : 'bg-gray-05'}"}

    .clearfix.mb2
      .col.col-12.center
        .h1.mx-auto.line-height-2{class: "#{'py4' if !@browser.device.mobile?}"}
          What are you interested in?

    .clearfix.mx-auto
      =simple_form_for @profile, method: :put, url: wizard_path do |form|
        .max-width-2.mx-auto
          .flex.justify-center
            .inline-block.ml1
              -5.times do |index|
                =render "profiles/interest_checkbox", :index => index
            .inline-block.align-top.ml2
              -4.times do |index|
                =render "profiles/interest_checkbox", :index => index + 5
          .display-none
            =form.association :offerings, label: false, :as => :check_boxes, collection: Offering.all

        -if @browser.device.mobile? 
          =render :partial => 'profile/steps/mobile_onboard_submit_btns',:locals => {:form  => form, :form_name => 'interests'}
        -else
          .px4.relative{style: 'height:107px;'}
            =render :partial => "profiles/onboard_submit_btns", :locals => {:form  => form, :form_name => 'interests'}

:javascript
  $(document).ready(function(){
    $('.btn-interest').on('click', function(){
      if($(this).hasClass('active')){
        $(this).css('background-color', 'white');
        $(this).css('border-color', 'black');
        $('i', this).css('display', 'none');
        $(this).removeClass('active');
      }else{
        $(this).css('background-color', '#00CCFF');
        $(this).css('border-color', '#00CCFF');
        $('i', this).css('display', 'inline');
        $(this).addClass('active');
      }
      var target = '#' + $(this).data('target');
      $(target).prop('checked', function( i, val ) {
        return !val;
      });
    });

    //submit buttons may not be pushed multiple times
    $("form").submit(function() {
      $(this).submit(function() {
        return false;
      });
      return true;
    });

    //mobile
    $(window).scrollTop(0)

  });


