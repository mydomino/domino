.modal.fade{id: "task-#{task.id}"}
  .container
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .row
            .col-xs-12.col-sm-6.text-center
              =image_tag task.icon
            .col-xs-12.col-sm-6
              %h3
                =task.name
              %p
                =task.description
              -if(task.cta_link.present?)
                =link_to task.cta_text, task.cta_link, class: 'btn blue btn-default full-width'
              -if(!recommendation.done)
                =link_to "I've done this", recommendation_complete_path(recommendation.id), class: 'btn btn-default full-width', method: "POST"
              -else
                =link_to "Mark as Incomplete", recommendation_undo_complete_path(recommendation.id), class: 'btn btn-default full-width', method: "DELETE"
          -if recommendation.comment.present?
            %hr
            .row
              .col-xs-12
                %h5.uppercase.bold
                  =recommendation.concierge.name
                  Says
                %p
                  =recommendation.comment