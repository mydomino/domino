=simple_form_for @task do |form|
  =form.label :name, class: 'bold' 
  =form.input_field :name, class: 'text-input'
  .mt1
    =form.label :description, class: 'bold'
    =form.input_field :description, class: 'text-input'
  .mt1
    =form.label :cta_link, class: 'bold'
    =form.input_field :cta_link, class: 'text-input'
  .mt1
    =form.label :cta_text, class: 'bold'
    =form.input_field :cta_link, class: 'text-input'
  .mt1
    =form.label :icon, class: 'block bold'
    =form.select :icon, {collection: Task::ICON_OPTIONS}, {}, {class: 'block select-box', style: 'width: 128px;'}
