.container
  .clearfix.bg-white.mt3.p2
    .col.col-12.center
      =link_to "Add a new Task", new_task_path, class: 'btn white bg-blue rounded m2'
  .clearfix.bg-white.py3
    -@tasks.each_slice(3) do |tasks|
      .clearfix
        -tasks.each do |task|
          .col.col-12.sm-col-4.px2.mt2
            .clearfix.border.center.rounded.p2
              .col-12.right-align
                =link_to task_toggle_default_path(task.id), method: "POST" do
                  -if (task.default)
                    .fa.fa-check-square-o
                  -else
                    .fa.fa-square-o
                  Default
              .col-12.icon.center.py4
                =image_tag task.icon, style: "max-height: 100px;margin-bottom: 10px;"
                %h3.mt0.uppercase.bold.text-center
                  =task.name
              .col-12.left-align
                =link_to "Edit", edit_task_path(task), class: 'bg-blue white btn rounded'
                =link_to "Delete", task_path(task), method: 'DELETE', data: {confirm: 'Are you sure?'}, class: 'pull-right btn bg-navy white rounded'