.clearfix.flex.flex-center.border-hover.py2
  .col.sm-col-2.center.px2
    %h3
      =link_to task_toggle_default_path(task.id), method: "POST" do
        -if (task.default)
          .fa.fa-check-square-o
        -else
          .fa.fa-square-o
        Default
  .col.sm-col-2
    =image_tag task.icon, style: "max-height: 100px;"
  .col.sm-col-5
    %h3.mt0.uppercase.bold.text-center
      =task.name
    =task.description
  .col.sm-col-3.hover-show.right-align.px2
    =link_to "Edit", edit_task_path(task), class: 'bg-blue white btn rounded'
    =link_to "Delete", task_path(task), method: 'DELETE', data: {confirm: 'Are you sure?'}, class: 'btn bg-red white rounded'