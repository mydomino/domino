.task{class: task.id, data: {toggle: 'modal', target: "#task-#{task.id}"}}
  .status.uppercase{class: ('completed' if recommendation.done)}
    .completion-status-icon
    Completed
  .icon.text-center
    =image_tag task.icon
  %h4.uppercase.bold.title.text-center
    =task.name
  .description
    %p
      =task.description
.modal.fade{id: "task-#{task.id}"}
  .container
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .row
            .col-xs-12.col-sm-6
              =image_tag task.icon
            .col-xs-12.col-sm-6
              %h3
                =task.name
              %p
                =task.description
              -if(!recommendation.done)
                =link_to "I've done this", recommendation_complete_path(recommendation.id), class: 'btn full-width', method: "POST"
              -else
                =link_to "Mark as Incomplete", recommendation_undo_complete_path(recommendation.id), class: 'btn full-width', method: "DELETE"
          -if recommendation.comment.present?
            %hr
            .row
              .col-xs-12
                %h5.uppercase.bold 
                  =recommendation.concierge.name
                  Says
                %p
                  =recommendation.comment
