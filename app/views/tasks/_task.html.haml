.task{data: {toggle: 'modal', target: "#task-#{task.id}"}}
  .status.caps{class: ('completed' if recommendation.done)}
    .completion-status-icon
    Completed
  .center.py3
    =image_tag task.icon
  %h4.center.caps.bold.truncate
    =task.name
  .description
    %p
      =task.description
.modal.fade{id: "task-#{task.id}"}
  .container
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .clearfix
            .sm-col.sm-col-12.md-col-6.center
              =image_tag task.icon
            .sm-col.sm-col-12.md-col-6
              %h3
                =task.name
              %p
                =task.description
              -if(task.cta_link.present?)
                =link_to task.cta_text, task.cta_link, class: 'btn blue btn-default full-width'
              -if(!recommendation.done)
                =link_to "I've done this", recommendation_complete_path(recommendation.id), class: 'btn btn-default full-width', method: "POST"
              -else
                =link_to "Mark as Incomplete", recommendation_undo_complete_path(recommendation.id), class: 'btn btn-default full-width', method: "DELETE"
          -if recommendation.comment.present?
            %hr
            .row
              .col-xs-12
                %h5.uppercase.bold
                  =recommendation.concierge.name
                  Says
                %p
                  =recommendation.comment
