.col-xs-12
  .action.panel.row
    .col-xs-12.col-md-9.col-md-push-3
      .content{style: "width:100%;"}
        -if concierge_signed_in?
          =link_to "", recommendation_path(recommendation), method: "DELETE", class: "glyphicon glyphicon-remove btn-danger btn", style: "padding: 4px;position:absolute;right:0px;top:0px;border-bottom-right-radius: 0px; border-top-left-radius: 0px;"
        %h5.uppercase.bold
          =action.name
        %p
          =action.description
    .col-xs-12.col-md-3.done-state.col-md-pull-9
      .row{style: 'width: 100%;height: 100%;padding: 0px;margin:0px;'}
        -if !recommendation.done
          .col-xs-12.col-md-6.gray
            .content
              .glyphicon.glyphicon-unchecked
          .col-md-6.hidden-xs
            .content
              -if action.icon.present?
                =image_tag("#{action.icon}.png")
          .col-xs-12.slide{style: 'padding:0px;'}
            .blue{style: "height: 100%;display: flex;width: 100%; margin: 0px;"}
              .content
                Completed?
                =link_to "Yes", recommendation_complete_path(recommendation.id), class: 'small btn transparent uppercase', method: "POST"
        -else
          .col-xs-6.green
            .content
              .glyphicon.glyphicon-ok
              .undo{style: "font-size: 12px;position: absolute; left:20px; bottom: 10px;"}
                =link_to 'Undo', recommendation_undo_complete_path(recommendation), style: "color: #fff;", method: "DELETE"
          .col-xs-6
            .content
              .glyphicon.glyphicon-leaf.blue