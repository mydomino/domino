.container
  .row
    .col-xs-12
      %table.table.store_list
        %tr
          %th
            Lead Name
          %th
            Created At
        - @amazon_storefronts.each do |store|
          %tr
            %td
              =store.lead_name
            %td
              =time_ago_in_words store.created_at
              ago
            %td
              =link_to "View Store", amazon_storefront_path(store), target: 'blank'
            %td
              =link_to "Make Recommendation", new_recommendation_path
  .row
    .col-xs-12
      =link_to "New Storefront", new_amazon_storefront_path, class: 'btn'
      =link_to "Product Library", amazon_products_path, class: 'btn'