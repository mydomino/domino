.container
  .row
    .col-xs-12.col-md-8.col-md-offset-2
      %h2.bold
        Hi, 
        =@amazon_storefront.lead_name
  .row
    .col-xs-12.col-md-8.col-md-offset-2
      .panel
        %h2
          ="#{@amazon_storefront.concierge.name}'s Recommendations"
  .row
    .col-xs-12.col-md-8.col-md-offset-2
      .row
        -@amazon_storefront.amazon_products.each do |product|
          .col-xs-12.col-sm-6.col-md-4
            .amazon_picture
              =image_tag product.image_url
            =link_to product.name, product.url, target: '_blank'
:javascript
  $(document).ready(function(){
    var maxHeight = 0;

    $("div.amazon_picture img").each(function(){
       if ($(this).height() > maxHeight) { maxHeight = $(this).height(); }
    });

    $("div.amazon_picture").height(maxHeight);
  });
