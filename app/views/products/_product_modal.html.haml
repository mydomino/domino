.clearfix.mx-auto.max-width-4.modal.fixed.top-0.bottom-0.left-0.right-0.fade{id: "product-#{product.id}"}
  .modal-dialog
    .modal-content.bg-white
      .modal-header.relative
        .absolute.top-0.left-0.close.pointer{"data-dismiss" => "modal"}
          .fa.fa-times.fa-2x.blue
      .modal-body
        .clearfix.max-width-4
          .sm-col.sm-col-12.md-col-6.center.py4
            =image_tag product.image_url, style: 'max-height: 256px; max-width: 256px;'
          .sm-col.sm-col-12.md-col-6
            %h3
              =product.name
            %p
              =product.description
            =link_to "#{product.price} on Amazon", product.url, class: 'btn-shame block center bg-navy white rounded mb1', target: "_blank"
            -if(!recommendation.done)
              =link_to "I've bought this", recommendation_complete_path(recommendation.id), class: 'btn-shame block center bg-blue white rounded', method: :post
            -else
              =link_to "Mark as Unpurchased", recommendation_undo_complete_path(recommendation.id), class: 'btn-shame block center bg-blue white rounded', method: :delete
