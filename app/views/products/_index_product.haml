.clearfix.rounded.flex.items-center.px2
  .col.sm-col-2.center
    %h3
      =link_to product_toggle_default_path(product.id), method: "POST", class: 'text-decoration-none blue' do
        -if (product.default)
          .fa.fa-check-square-o
        -else
          .fa.fa-square-o
        Default
  .col.sm-col-2
    =image_tag product.image_url, width: "150px"
  .col.sm-col-5
    %h3.bold
      =product.name
    %h3.mt0
      =product.price
  .col.sm-col-3.center.hover-show.max-width-2
    =link_to "Edit", edit_product_path(product), class: 'white bg-blue text-decoration-none rounded p2 btn'
    =link_to "Delete", product_path(product), class: 'white bg-red text-decoration-none rounded btn',  method: :delete, data: {confirm: 'Are you sure?'}
