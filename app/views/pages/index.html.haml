    .container
      .row
        .col-xs-12.col-md-8.col-md-push-2
          %h2{style: 'color: white;margin-top: 100px;margin-bottom: 50px;'}
            We help you 
            %strong save money 
            through clean energy—at no charge.
      .row{style: 'margin-bottom: 100px;'}
        .col-xs-12.col-sm-4.uppercase.text-center
          .icon.twohundred
            =embedded_svg('line_solar.svg')
            Solar
            %br
            Energy
        .col-xs-12.col-sm-4.uppercase.text-center
          .icon.twohundred
            =embedded_svg('line_products.svg')
            Product
            %br
            Suggestions
        .col-xs-12.col-sm-4.uppercase.text-center
          .icon.twohundred
            =embedded_svg('line_energy.svg')
            Energy
            %br
            Analysis

      .row
        .col-xs-12.text-center{style: 'padding-bottom: 30px;'}
          %button.btn.dark-blue.gradient.uppercase.large{style: 'font-size: 1.5rem;'}
