.col-xs-12.col-sm-4
  .recommendation{class: ('completed' if recommendation.done)}
    -if concierge_signed_in?
      =link_to "", recommendation_path(recommendation), method: "DELETE", class: "pull-right glyphicon glyphicon-remove btn", style: "padding: 4px;position: absolute;top: 5px; right: 5px; z-index:1;"
    =render recommendation.recommendable, recommendation: recommendation
    =render 'recommendations/comment', recommendation: recommendation